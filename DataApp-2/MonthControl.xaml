<UserControl x:Class="DataApp_2.MonthControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataApp_2"
             mc:Ignorable="d" 
             d:DesignHeight="255" d:DesignWidth="215" Height="255" Width="215">
    <Border BorderBrush="Gray" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Name="MonthTopGrid" Height="40" Background="LightBlue">
                <Label Name="monthlbl" Margin="5" FontStyle="Italic" VerticalContentAlignment="Center"></Label>
            </Grid>
            <WrapPanel Name="MonthPanel" Grid.Row="1" Height="215" Width="215">
            </WrapPanel>
        </Grid>
    </Border>
</UserControl>
